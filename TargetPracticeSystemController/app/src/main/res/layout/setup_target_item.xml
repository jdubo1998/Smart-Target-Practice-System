    <LinearLayout
        android:id="@+id/mode_setorder"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="Next Target: "
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/nexttarget_spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mode_interval"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="Min Up Interval: "
                android:layout_weight="4"/>
            <EditText
                android:id="@+id/minupinterval_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textSize="12sp"
                android:inputType="numberDecimal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:text="@string/seconds_unit"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="Max Up Interval: "
                android:layout_weight="4"/>
            <EditText
                android:id="@+id/maxupinterval_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textSize="12sp"
                android:inputType="numberDecimal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:text="@string/seconds_unit"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="Min Down Interval: "
                android:layout_weight="4"/>
            <EditText
                android:id="@+id/mindowninterval_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textSize="12sp"
                android:inputType="numberDecimal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:text="@string/seconds_unit"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="Max Down Interval: "
                android:layout_weight="4"/>
            <EditText
                android:id="@+id/maxdowninterval_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textSize="12sp"
                android:inputType="numberDecimal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:text="@string/seconds_unit"
                android:layout_weight="2"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mode_sync"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="Sync: "
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/sync_spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>